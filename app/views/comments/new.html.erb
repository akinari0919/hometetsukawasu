<div class="text-center container">
  <div class="row">
    <div class="col-lg-5 mx-auto">
      <div class="col mt-5">
        <div class="card bg-secondary shadow-sm text-white">
          <div class="h2 mt-5">
            <p><%= @board.body %></p>
          </div>
          <div class="lead mt-3">
            <p><%= @board.age %>代 <%= @board.job %> </p>
          </div>
        </div>
      </div>

      <%= form_with model: @comment, url: board_comments_path(@board) do |f| %>
        <div class="mt-5"> 
          <label class="lead form-label">褒めて下さい</label>
          <%= f.text_area :body, class:"form-control", rows:"3", placeholder:"（例）素敵！真似できない！" %>
        </div>
        <a class="btn btn-warning mt-4" data-toggle="modal" data-target="#testModal">確認</a>
        
        <div class="mt-5">
          <%= link_to '別のお題にする', renew_path, class: "btn btn-outline-secondary", method: :post %>
        </div>
        <div class="mt-2">
          <%= link_to 'TOPに戻る', root_path, class: "btn btn-outline-secondary" %>
        </div>
        
        <!-- モーダル画面 -->
        <div class="modal fade" id="testModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-body" , id="new_comment">
                <p>登録しますか？</p>
              </div>
              <div class="modal-footer">
                <%= f.text_field :name, class:"form-control", placeholder:"公開用ニックネーム(必須)を入力して登録" %>
                <%= f.submit '登録する', class:"btn btn-warning" %>
                <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
              </div>
            </div>
          </div>
        </div>
        
      <% end %>
    </div>
  </div>
</div>

