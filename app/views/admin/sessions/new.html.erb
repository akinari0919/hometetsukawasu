
<div class="container mt-5 col-lg-3 mx-auto">
  <h1 class="h3 mb-5 fw-normal text-center">管理者ログイン</h1>
  <%= form_with url: admin_login_path, local: true do |f| %>
    <%= f.label :email, 'Email' %>
    <%= f.text_field :email, class:"form-control mb-4", placeholder:"メールアドレス" %>
    <%= f.label :password, 'Password' %>
    <%= f.password_field :password, class:"form-control mb-5", placeholder:"パスワード" %>
    <div class="text-center">
      <%= f.submit 'Login', class: "btn btn-lg btn-warning" %>
    </div>
  <% end %>
</div>
